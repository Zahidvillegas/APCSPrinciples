def start():
    userInput = input("Which MadLib Do you want? school or birthday? ")
    if userInput.lower() == "school":
        print("Good Choice!")
        import time; time.sleep(1.5)
        school()
    elif userInput.lower() == "birthday":
        print("Good Choice!")
        import time; time.sleep(1.5)

    else:
        print("Plz Answer the question!")
        import time; time.sleep(1.5)
        start()

